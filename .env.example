# SweetSpot Cowork - Environment Configuration
# Copy this file to .env.local and update with your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key-32-characters"

# ============================================
# Application Configuration
# ============================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Base URL - Used for all API calls
# Development: http://localhost:3000
# Production: https://your-production-domain.com
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# ============================================
# Email Configuration (Optional)
# ============================================
# Uncomment and configure if using custom email service
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="noreply@example.com"
# SMTP_PASS="your-smtp-password"
# SMTP_FROM="SweetSpot Cowork <noreply@example.com>"

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_MAX_SIZE="52428800" # 50MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS_PER_HOUR="1000"
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# ============================================
# Logging & Monitoring (Optional)
# ============================================
LOG_LEVEL="info"
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ============================================
# Payment Configuration (Optional)
# ============================================
# Uncomment and configure if using Stripe
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# External APIs (Optional)
# ============================================
# Uncomment and configure if needed
# GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# ============================================
# Analytics (Optional)
# ============================================
# Uncomment and configure if using analytics
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# MIXPANEL_PROJECT_TOKEN="your-mixpanel-token"

# ============================================
# Testing Configuration (Optional)
# ============================================
# Uncomment for testing purposes
# TEST_TENANT_ID="your-test-tenant-id"
# TEST_CLIENT_ID="your-test-client-id"