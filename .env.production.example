# SweetSpot Cowork - Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DIRECT_URL="postgresql://username:password@host:port/database?sslmode=require"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Application URLs
NEXT_PUBLIC_APP_URL="https://app.sweetspotcowork.com"
NEXTAUTH_URL="https://app.sweetspotcowork.com"
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-characters"

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key-32-characters"

# CORS Configuration
ALLOWED_ORIGINS="https://app.sweetspotcowork.com,https://www.sweetspotcowork.com"

# Email Configuration (Optional - if using custom email service)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@sweetspotcowork.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM="SweetSpot Cowork <noreply@sweetspotcowork.com>"

# File Upload Configuration
UPLOAD_MAX_SIZE="10485760" # 10MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR="1000"
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Cache Configuration (Redis)
REDIS_URL="redis://redis:6379"
CACHE_TTL="3600" # 1 hour in seconds

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_ERROR_REPORTING="true"
ENABLE_PERFORMANCE_MONITORING="true"

# Payment Configuration (if applicable)
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Webhook Configuration
WEBHOOK_BASE_URL="https://app.sweetspotcowork.com"
WEBHOOK_SECRET="your-webhook-secret"

# External API Keys (if applicable)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_PROJECT_TOKEN="your-mixpanel-token"

# CDN Configuration (Optional)
CDN_URL="https://cdn.sweetspotcowork.com"
STATIC_ASSETS_URL="https://assets.sweetspotcowork.com"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Health Check Configuration
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/api/health"

# Performance Configuration
ENABLE_COMPRESSION="true"
ENABLE_CACHING="true"
STATIC_FILE_CACHE_TTL="31536000" # 1 year in seconds